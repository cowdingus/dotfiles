# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#81a1c1" # Light green
        color_degraded = "#fafe7c" # Light yellow
        color_bad = "#ff7770" # Light red
}

order += "disk /"
order += "load"
order += "memory"
order += "cpu_temperature 0"
order += "wireless _first_"
order += "volume master"
order += "battery 0"
order += "tztime local"

cpu_temperature 0 {
        format = " %degrees °C  "
        path = "/sys/devices/platform/asus-nb-wmi/hwmon/hwmon5/temp1_input"
}

wireless _first_ {
        format_up = " %essid  "
        format_down = " Down  "
}

volume master {
        format = " %volume  "
        format_muted = " %volume  "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage"
        hide_seconds = true
        integer_battery_capacity = true
        last_full_capacity = true
        status_chr = " +"
        status_bat = ""
        status_full = ""
}

tztime local {
        format = "   %Y-%m-%d    %I:%M  "
}

disk "/" {
        format = " %avail  "
}

load {
        format = " %1min  "
}

memory {
        format = " %used  "
        threshold_degraded = "1G"
        format_degraded = " < %available  "
}
